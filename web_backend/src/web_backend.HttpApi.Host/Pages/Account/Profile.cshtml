@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Volo.Abp.AspNetCore.Mvc.UI
@addTagHelper *, Volo.Abp.AspNetCore.Mvc.UI.Bootstrap
@addTagHelper *, Volo.Abp.AspNetCore.Mvc.UI.Bundling
@model web_backend.HttpApi.Host.Pages.Account.CustomProfileModel;
@using Volo.Abp.AspNetCore.Mvc.UI.Theming;
@inject Volo.Abp.Users.ICurrentUser CurrentUser
@inject IThemeManager ThemeManager

@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "My Profile";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-9 py-5">
            <!-- Successful Name Change message -->
            @if (TempData["NameChangeSuccess"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["NameChangeSuccess"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <!-- Successful Email confirmation message -->
            @if (TempData["EmailVerificationSent"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["EmailVerificationSent"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <!-- Successful password change message -->
            @if (TempData["PasswordChangeSuccess"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["PasswordChangeSuccess"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }
            <h2 class="mb-4">My Profile</h2>
            <div class="card vss-profile-info-card">
                <div class="card-body d-flex flex-column align-items-center">
                    <img src="https://ui-avatars.com/api/?name=@CurrentUser.UserName&background=13125F&color=fff"
                         class="rounded-circle mb-2" width="100" height="100" alt="User Avatar">
                    <h6 class="text-muted mb-1">@CurrentUser.UserName</h6>
                    <h5 class="text-muted mb-1">@Model.UserRole</h5>
                </div>
            </div>

            <!-- Profile Information -->
            <div class="card vss-profile-info-card mt-3">
                <div class="card-body">
                    <h4 class="card-title">Profile Information</h4>
                    <dl class="row">
                        <!-- Email Address -->
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8 mb-3">
                            @CurrentUser.Email
                            @if (!CurrentUser.EmailVerified)
                            {
                                <span class="text-warning">(Unverified)</span>
                                <form method="post" asp-page-handler="SendEmailVerification">
                                    <button type="submit" class="btn btn-warning btn-sm mt-2">
                                        Verify Email
                                    </button>
                                </form>
                            }
                            else
                            {
                                <span class="text-success">(Verified)</span>
                            }
                        </dd>

                        <!-- Phone Number -->
                        <dt class="col-sm-4">Phone Number</dt>
                        <dd class="col-sm-8 mb-3">
                            @(string.IsNullOrWhiteSpace(CurrentUser.PhoneNumber) ? "Not provided" : CurrentUser.PhoneNumber)
                        </dd>
                        <!-- Full Name -->
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">
                            <form method="post" asp-page-handler="UpdateName">
                                <input type="text" class="form-control vss-profile-info-input" name="NewName" id="fullName" value="@CurrentUser.Name" required />
                                <button type="submit" class="btn btn-primary vss-profile-button">Save Changes</button>
                            </form>
                        </dd>
                    </dl>                   
                </div>
            </div>

            <!--Change Passowrd -->
            <div class="card vss-profile-info-card">
                <div class="card-body">
                    <h4 class="card-title">Change Password</h4>
                    <form method="post" asp-page-handler="ChangePassword">
                        <div>
                            <label for="CurrentPassword" class="form-label">Current Password</label>
                            <input type="password" class="form-control vss-profile-info-input" id="CurrentPassword" name="CurrentPassword" required />
                        </div>
                        <div>
                            <label for="NewPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control vss-profile-info-input" id="NewPassword" name="NewPassword" required />
                        </div>
                        <div>
                            <label for="ConfirmPassword" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control vss-profile-info-input" id="ConfirmPassword" name="ConfirmPassword" required />
                        </div>
                        <button type="submit" class="btn btn-primary vss-profile-button">Change Password</button>
                    </form>
                </div>
            </div>

            <!-- Subscription Details -->
            <div class="card vss-profile-info-card">
                <div class="card-body">
                    <h4 class="card-title">Subscription Details</h4>
                    @if (CurrentUser.IsInRole("subscriber"))
                    {
                        <form method="post" asp-page-handler="CancelSubscription">                       
                            <button type="submit" class="btn btn-danger">Cancel Subscription</button>
                        </form>
                    }
                    else
                    {
                        <h6 class="text-muted mb-1">No active subscription</h6>
                    }

                </div>
            </div>

            <!-- Delete Account -->
            <div class="card vss-profile-info-card mt-3">
                <div class="card-body">
                    <h4 class="card-title">Delete Account</h4>
                    <p class="card-text text-muted">
                        Deleting your account will permanently remove all your data. This action cannot be undone.
                    </p>
                    <div class="row">
                        <div class="col-md-12">
                            <form method="post" asp-page-handler="DeleteAccount"
                                  onsubmit="return confirm('Are you sure you want to delete your account? This action cannot be undone.');">
                                <button type="submit" class="btn btn-danger w-100">Delete Account</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
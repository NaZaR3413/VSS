@using System.Reflection
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Volo.Abp.AspNetCore.Components.Web.BasicTheme.Themes.Basic

<CascadingAuthenticationState>
    <!-- Scan the Blazor client assembly *and* the auth assembly so the
         built-in /authentication/* pages (login, logout, etc.) are found. -->
    <Router AppAssembly="@typeof(Program).Assembly"
        AdditionalAssemblies="@(new[] { typeof(RemoteAuthenticatorView).Assembly })">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData"
                                DefaultLayout="@typeof(MainLayout)">

                <NotAuthorized Context="notAuthorizedContext">
                    @if (!(notAuthorizedContext.User.Identity?.IsAuthenticated ?? false))
                    {
                        <!-- fully-qualify to avoid the “multiple components” ambiguity -->
                        <Volo.Abp.AspNetCore.Components.Web.BasicTheme.Themes.Basic.RedirectToLogin />
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <h4>Not Authorized</h4>
                            <p>You are not authorized to access this resource.</p>
                        </div>
                    }
                </NotAuthorized>

                <Authorizing>
                    <div class="text-center py-5">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3">Authorizing...</p>
                    </div>
                </Authorizing>

            </AuthorizeRouteView>
        </Found>

        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="alert alert-warning">
                    <h3>Page Not Found</h3>
                    <p>Sorry, there's nothing at this address.</p>
                </div>
            </LayoutView>
        </NotFound>

    </Router>
</CascadingAuthenticationState>

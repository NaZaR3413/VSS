@page "/schedule"

<div class="vss-page vss-page-layout--default">
    <main class="vss-main">
        <div class="container py-5">
            <section class="text-center mb-5">
                <h1 class="display-5 fw-bold">Upcoming Broadcast Schedule</h1>
                <p class="vss-subheading-schedules">Stay tuned for our live and on-demand high school sports coverage</p>
            </section>

            <section class="mb-5">
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    <div class="col">
                        <div class="vss-schedule-card">
                            <h5>Chandler Wolves vs. Hamilton Huskies</h5>
                            <p class="vss-game-meta">Saturday, April 10 · 6:00 PM</p>
                            <p class="vss-game-desc">A top rivalry match-up that never disappoints.</p>
                        </div>
                    </div>
                    <div class="col">
                        <div class="vss-schedule-card">
                            <h5>Saguaro Sabercats vs. Basha Bears</h5>
                            <p class="vss-game-meta">Sunday, April 11 · 5:30 PM</p>
                            <p class="vss-game-desc">Watch as two top contenders battle it out for playoff positioning.</p>
                        </div>
                    </div>
                    <div class="col">
                        <div class="vss-schedule-card">
                            <h5>Liberty Lions vs. Centennial Coyotes</h5>
                            <p class="vss-game-meta">Tuesday, April 13 · 7:00 PM</p>
                            <p class="vss-game-desc">A clash of powerhouse programs in the valley.</p>
                        </div>
                    </div>
                </div>
            </section>

            <section class="text-center mt-5">
                <p class="lead">Don't miss a moment — check back often as new games are added weekly.</p>
                <a class="vss-auth__button" href="/account/login">Subscribe for Full Access</a>
            </section>
        </div>
    </main>
</div>


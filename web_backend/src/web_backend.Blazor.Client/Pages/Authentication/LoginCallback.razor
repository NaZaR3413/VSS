@page "/authentication/login-callback"
@using Microsoft.Extensions.Configuration
@using System.Text.Json
@using web_backend.Blazor.Client.Services

@inject NavigationManager Navigation
@inject IConfiguration Configuration
@inject IJSRuntime JS
@inject AuthService AuthService
@inject DebugService DebugService

<div class="card">
    <div class="card-body text-center">
        <h3>Processing login...</h3>
        <div class="mt-4">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        try
        {
            await DebugService.LogAsync("Login callback page loaded");
            await DebugService.LogAsync($"Current URL: {Navigation.Uri}");
            
            // Check if user is authenticated after redirect from login page
            var isAuthenticated = await AuthService.CheckAuthenticationStatus();
            
            await DebugService.LogAsync($"Authentication check result: {isAuthenticated}");
            
            // Navigate to landing page after processing
            Navigation.NavigateTo("/landing");
        }
        catch (Exception ex)
        {
            await DebugService.LogAsync($"Login error: {ex.Message}");
            await JS.InvokeVoidAsync("console.error", ex.StackTrace);
            Navigation.NavigateTo("/landing");
        }
    }
}
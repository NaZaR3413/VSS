@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

<RemoteAuthenticatorView Action="@Action">
    <LoggingIn>
        <div class="container">
            <div class="row justify-content-center mt-5">
                <div class="col-md-6 text-center">
                    <div class="card shadow-sm">
                        <div class="card-body p-5">
                            <img src="/images/varsitylogoempty.jpg" alt="VSS Logo" style="max-width: 200px; margin-bottom: 20px;" />
                            <h3>Signing in...</h3>
                            <div class="spinner-border text-primary mt-3" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-3">Please wait while we redirect you to the login page...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </LoggingIn>
    <CompletingLoggingIn>
        <div class="container">
            <div class="row justify-content-center mt-5">
                <div class="col-md-6 text-center">
                    <div class="card shadow-sm">
                        <div class="card-body p-5">
                            <img src="/images/varsitylogoempty.jpg" alt="VSS Logo" style="max-width: 200px; margin-bottom: 20px;" />
                            <h3>Completing login...</h3>
                            <div class="spinner-border text-primary mt-3" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-3">Finalizing your authentication, you'll be redirected shortly...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </CompletingLoggingIn>
    <LogInFailed>
        <div class="container">
            <div class="row justify-content-center mt-5">
                <div class="col-md-6 text-center">
                    <div class="card shadow-sm">
                        <div class="card-body p-5">
                            <img src="/images/varsitylogoempty.jpg" alt="VSS Logo" style="max-width: 200px; margin-bottom: 20px;" />
                            <h3 class="text-danger">Login Failed</h3>
                            <p class="mt-3">We couldn't log you in. Please try again or contact support if the problem persists.</p>
                            <a href="/authentication/login" class="btn btn-primary mt-3">Try Again</a>
                            <a href="/landing" class="btn btn-outline-secondary mt-3 ms-2">Return to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </LogInFailed>
    <LogOutSucceeded>
        <div class="container">
            <div class="row justify-content-center mt-5">
                <div class="col-md-6 text-center">
                    <div class="card shadow-sm">
                        <div class="card-body p-5">
                            <img src="/images/varsitylogoempty.jpg" alt="VSS Logo" style="max-width: 200px; margin-bottom: 20px;" />
                            <h3 class="text-success">Successfully Logged Out</h3>
                            <p class="mt-3">You have been successfully logged out.</p>
                            <a href="/landing" class="btn btn-primary mt-3">Return to Home</a>
                            <a href="/authentication/login" class="btn btn-outline-secondary mt-3 ms-2">Log In Again</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </LogOutSucceeded>
    <LogOutFailed>
        <div class="container">
            <div class="row justify-content-center mt-5">
                <div class="col-md-6 text-center">
                    <div class="card shadow-sm">
                        <div class="card-body p-5">
                            <img src="/images/varsitylogoempty.jpg" alt="VSS Logo" style="max-width: 200px; margin-bottom: 20px;" />
                            <h3 class="text-danger">Logout Failed</h3>
                            <p class="mt-3">There was a problem logging you out. You might still be logged in.</p>
                            <a href="/authentication/logout" class="btn btn-primary mt-3">Try Again</a>
                            <a href="/landing" class="btn btn-outline-secondary mt-3 ms-2">Return to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </LogOutFailed>
    <RegisteringFailed>
        <div class="container">
            <div class="row justify-content-center mt-5">
                <div class="col-md-6 text-center">
                    <div class="card shadow-sm">
                        <div class="card-body p-5">
                            <img src="/images/varsitylogoempty.jpg" alt="VSS Logo" style="max-width: 200px; margin-bottom: 20px;" />
                            <h3 class="text-danger">Registration Failed</h3>
                            <p class="mt-3">We couldn't complete your registration. Please try again or contact support.</p>
                            <a href="/authentication/register" class="btn btn-primary mt-3">Try Again</a>
                            <a href="/landing" class="btn btn-outline-secondary mt-3 ms-2">Return to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </RegisteringFailed>
</RemoteAuthenticatorView>

@code {
    [Parameter] public string? Action { get; set; }
}